# Coolify Development environment template.
# Replace the placeholder values through Coolify's UI or by cloning this file to
# `.env.development.local` for dry runs.

# --- Required secrets (deploy fails if left blank) ---
# NOTE: 開発環境でも認証情報は都度見直し、必要に応じて変更してください。
POSTGRES_PASSWORD=password
RABBITMQ_PASSWORD=guest
GEMINI_API_KEY=your-gemini-api-key

# --- Defaults with override hooks ---
POSTGRES_USER=admin
POSTGRES_DB=eeg_data
POSTGRES_HOST=db
POSTGRES_PORT=5432

RABBITMQ_USER=guest
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

OBJECT_STORAGE_ENDPOINT=object-storage
OBJECT_STORAGE_PORT=8333
OBJECT_STORAGE_ACCESS_KEY=storageadmin
OBJECT_STORAGE_SECRET_KEY=storageadmin
OBJECT_STORAGE_USE_SSL=false
OBJECT_STORAGE_RAW_DATA_BUCKET=raw-data
OBJECT_STORAGE_MEDIA_BUCKET=media
OBJECT_STORAGE_BIDS_EXPORTS_BUCKET=bids-exports
OBJECT_STORAGE_ERP_MODELS_BUCKET=erp-models

NGINX_PORT=8080
ERP_SERVICE_PORT=8001
PGADMIN_PORT=5050
OBSERVABILITY_PORT=8090

# --- Queue Names ---
RAW_DATA_EXCHANGE=raw_data_exchange
PROCESSING_QUEUE=processing_queue
MEDIA_PROCESSING_QUEUE=media_processing_queue
DATA_LINKER_QUEUE=data_linker_queue
STIMULUS_ASSET_QUEUE=stimulus_asset_queue
EVENT_CORRECTION_QUEUE=event_correction_queue
BIDS_EXPORT_REQUEST_QUEUE=bids_export_request_queue
BIDS_EXPORT_COMPLETION_QUEUE=bids_export_completion_queue

MEDIA_PREFETCH=1

AUTH_MANAGER_URL=http://auth_manager:3000
BIDS_EXPORTER_URL=http://bids_exporter:8000

# --- Observability Dashboard ---
OBSERVABILITY_DASHBOARD_REFRESH_MS=4000
OBSERVABILITY_BASIC_USER=observer
# NOTE: ダッシュボードの資格情報は必要に応じて変更してください。
OBSERVABILITY_BASIC_PASSWORD=biosigmatch
OBSERVABILITY_BASIC_REALM=Observability Dashboard

# --- Channel Quality Thresholds ---
CHANNEL_ZERO_RATIO_THRESHOLD=0.98
CHANNEL_FLATLINE_PTP_THRESHOLD=5
CHANNEL_BAD_IMPEDANCE_THRESHOLD=200
CHANNEL_BAD_IMPEDANCE_RATIO=0.5
CHANNEL_UNKNOWN_IMPEDANCE_RATIO=0.75
