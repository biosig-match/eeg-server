{
  // Format on save for a smooth workflow in VSCode (WSL Remote)
  "editor.formatOnSave": true,

  // Python: use Ruff for formatting and fixes
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  // TypeScript/JavaScript: Prettier for formatting and ESLint for fixes
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },

  // Ensure ESLint Flat Config is used (supported by recent extensions)
  "eslint.useFlatConfig": true,
  // Pyright (Pylance) settings â€” also mirrored in pyproject [tool.pyright]
  "python.languageServer": "Pylance",
  "python.analysis.diagnosticMode": "workspace",

  // Use a single editor-only interpreter so Pylance resolves imports.
  // On Windows, point to .venv\\Scripts\\python.exe instead.
  "python.defaultInterpreterPath": ".venv/bin/python"
}
